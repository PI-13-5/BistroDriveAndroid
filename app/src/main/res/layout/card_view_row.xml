<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/offerImage"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentStart="true"
                app:border="true"
                app:border_color="#000000"
                app:border_width="4dp"
                app:shadow="false"/>

            <TextView
                android:id="@+id/textViewCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="asdadasdasd"
                android:layout_toRightOf="@+id/offerImage"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/textViewCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasdasdas"
                android:layout_toRightOf="@+id/offerImage"
                android:layout_below="@+id/textViewCardName" />
            <TextView
                android:id="@+id/textViewCardPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasdasdas"
                android:layout_toRightOf="@+id/offerImage"
                android:layout_below="@+id/textViewCardType" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>